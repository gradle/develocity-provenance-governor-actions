{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "isolatedModules": true
  },
  "exclude": [
    "src/__fixtures__",
    "src/__tests__",
    "coverage",
    "dist",
    "node_modules"
  ],
  "include": ["src"]
}
